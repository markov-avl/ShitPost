{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <header>
        <div class="container-fluid d-flex h-100 align-items-center p-0">
            <nav class="navbar navbar-expand-lg navbar-light bg-light w-100">
                <div class="container-fluid" id="navbarContainer">
                    <a class="navbar-brand" href="{{ path('app_index') }}">
                        <img src="{{ asset('static/shit.png') }}" alt="" width="24" height="24"
                             class="d-inline-block align-text-top">
                        ShitPost
                    </a>
                </div>
            </nav>
        </div>
    </header>
    <div class="wrapper mt-3 m-auto">
        <form method="post">
            <div class="mb-1">
                <label class="form-label" for="logInInputUsername">Username</label>
                <div class="input-group">
                    <div class="input-group-text">@</div>
                    <input id="logInInputUsername"
                           class="form-control"
                           name="_username"
                           type="text"
                           placeholder="Username"
                           value="{{ last_username }}">
                </div>
            </div>
            <div class="mb-2 text-danger"></div>
            <div class="mb-1">
                <label class="form-label" for="logInInputPassword">Password</label>
                <input id="logInInputPassword"
                       class="form-control"
                       name="_password"
                       type="password"
                       placeholder="Password"
                       value="">
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <a class="d-flex align-items-center mt-2 mb-2" href="{{ path('app_register') }}">
                <div>No account?</div>
            </a>
            {% if error %}
                <div class="mb-2 text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <button class="btn btn-primary" type="submit">Log in</button>
        </form>
    </div>
{% endblock %}